#include <stdio.h>
#include <string.h>


 typedef struct  {
    char nome [30];
    char cor [10];
    int Exercito;
 } Paises;

 int main() {

    Paises Paises[5]; //Tomar cuidado com erro de sintaxe 
    
    int i; // os == é apenas estetica, similar ao contexto demonstrado no texto
    // ~~~ CADASTRO DOS Países ~~~~
    printf("======================================\n");

    printf("WAR SISTEMA DE CADASTRO DE PAISES WAR\n");

    printf("======================================\n");

    printf("Por favor, preencha as informações para 5 Países.\n\n");

    for (i = 0; i < 5; i ++) {

        printf("---Cadastro dos Países %d de 5 ---\n", i + 1);

        // Nome dos paises 
        printf("Digite o nome do território (máx. 29 caracteres:):");

        if (scanf(" %29s", paises[i].nome) !=1) {
            
            printf("Ocorreu um Erro na leitura do nome. Encerrando.\n");

            return 1;
        }

        // ~~~ cores do exército ~~~~

        printf("Digite a cor do exército (máx. 9 caracteres:)");

        if (scanf(" %9s", paises[i].cor) !=1) {
            printf("Ocorreu um Erro com a leitura da cor. Encerrando.\n");

            return 1;
        }

        // ~~~~ Quantidade (int) de tropas no exercito ~~~

        printf("Digite a quantidade de tropas no Exército (número inteiro):");

        if (scanf("%d", &paises[i].tropas) !=1) {
            printf("Erro na leitura da quantidade de tropas no Exército. Certifique-se de digitar um número inteiro.\n");

            while (getchar() !='\n');
            i--;
            
        }

        printf("\n");
    }

    // o resultado final deve manter 4 linhas entre os resultados

    printf("\n ===============================\n");

    printf("Resumo dos países vigentes cadastrados (5/5)\n");

    printf("==================================\n");

    for (i = 0; i < 5; i++) {
        printf("Países %d\n", i+1);

        printf("Nome: %s\n", paises[i].nome);
        printf("Cor: %s\n", paises[i].cor);
        printf("Tropas no Exército: %d\n", paises[i].exercito);
        printf("------------------------\n");
    }

    printf("\n WAR Programa finalizado com sucesso!WAR \n");

    return 0;

 }
